<div class="flex min-h-screen flex-col bg-quarter-spanish-white md:flex-row md:items-center md:bg-soapstone">
  <div
    id="desktopImage"
    class="relative hidden bg-cover bg-center bg-no-repeat pb-[78%] md:block md:max-w-[40%] md:flex-auto md:pb-[100vh] lg:block"
    {% if section.settings.desktop_image != blank %}
      style="background-image: url({{ section.settings.desktop_image | img_url:'master' }})"
    {% endif %}
  ></div>
  <div
    id="mobileImage"
    class="relative bg-cover bg-center bg-no-repeat pb-[78%] md:hidden md:max-w-[40%] md:flex-auto md:pb-[100vh] lg:hidden"
    {% if section.settings.mobile_image != blank %}
      style="background-image: url({{ section.settings.mobile_image | img_url:'master' }})"
    {% endif %}
  ></div>
  <div class="px-4 md:max-w-[60%] md:flex-auto">
    <div class="relative mx-auto -mt-8 box-content max-w-[343px] bg-soapstone px-5 py-8 text-center md:ml-0 md:max-w-[550px] md:bg-transparent md:pl-20 md:text-left">
      {% if section.settings.heading != blank %}
        <h2 class="mb-3 font-AnekLatin-Medium text-[24px]/[27px] text-mine-shaft md:font-AnekLatin-SemiBold md:text-[42px]/[58px] md:text-woodsmoke">
          {{ section.settings.heading }}
        </h2>
      {% endif %}
      {% if section.settings.description != blank %}
        <p class="text-[14px]/[20px] capitalize text-mine-shaft md:font-AnekLatin-Medium md:text-[18px]/[22px] md:text-woodsmoke md:opacity-60">
          {{ section.settings.description }}
        </p>
      {% endif %}
      <form class="my-7">
        <div id="phoneContainer" class="flex w-full flex-col gap-2 md:gap-12">
          <input
            type="text"
            class="w-full border border-solid border-grain-brown bg-white px-4 py-3 text-center focus:outline-none active:outline-none md:bg-transparent md:text-left"
            placeholder="Enter your number"
          >
          <button type="submit" class="btn w-full min-w-fit opacity-50 md:hidden lg:hidden">
            <span class="mb-[-2px] mt-[2px]">Done</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="11.796" height="10.315" viewBox="0 0 11.796 10.315">
              <g id="Group_8849" data-name="Group 8849" transform="translate(-215.754 -537.843)">
                  <path
                      id="Icon_ionic-ios-arrow-forward"
                      data-name="Icon ionic-ios-arrow-forward"
                      d="M15.366,11.352l-3.9-3.9a.734.734,0,0,1,0-1.041.743.743,0,0,1,1.044,0l4.422,4.419a.736.736,0,0,1,.021,1.016L12.51,16.3a.737.737,0,0,1-1.044-1.041Z"
                      transform="translate(204.508 531.646)"
                      fill="#fff"
                  ></path>
                  <path
                      id="Icon_ionic-ios-arrow-forward-2"
                      data-name="Icon ionic-ios-arrow-forward"
                      d="M15.366,11.352l-3.9-3.9a.734.734,0,0,1,0-1.041.743.743,0,0,1,1.044,0l4.422,4.419a.736.736,0,0,1,.021,1.016L12.51,16.3a.737.737,0,0,1-1.044-1.041Z"
                      transform="translate(210.406 531.646)"
                      fill="#fff"
                  ></path>
              </g>
            </svg>
          </button>
        </div>
        <div id="otpContainer" class="flex flex-col gap-3 text-left">
          <h3 class="text/[14px]/[20px] font-AnekLatin-Medium text-woodsmoke">{{ section.settings.otp_title }}</h3>
          <div class="grid grid-cols-6 gap-2">
            <!-- Six input fields for OTP digits -->
            <input
              type="text"
              class="h-[51px] w-[39px] rounded-lg border border-solid border-grain-brown text-center md:h-[61px] md:w-[61px]"
              maxlength="1"
            >
            <input
              type="text"
              class="h-[51px] w-[39px] rounded-lg border border-solid border-grain-brown text-center md:h-[61px] md:w-[61px]"
              maxlength="1"
              disabled
            >
            <input
              type="text"
              class="h-[51px] w-[39px] rounded-lg border border-solid border-grain-brown text-center md:h-[61px] md:w-[61px]"
              maxlength="1"
              disabled
            >
            <input
              type="text"
              class="h-[51px] w-[39px] rounded-lg border border-solid border-grain-brown text-center md:h-[61px] md:w-[61px]"
              maxlength="1"
              disabled
            >
            <input
              type="text"
              class="h-[51px] w-[39px] rounded-lg border border-solid border-grain-brown text-center md:h-[61px] md:w-[61px]"
              maxlength="1"
              disabled
            >
            <input
              type="text"
              class="h-[51px] w-[39px] rounded-lg border border-solid border-grain-brown text-center md:h-[61px] md:w-[61px]"
              maxlength="1"
              disabled
            >
          </div>
          <h4 class="text/[14px]/[20px] font-AnekLatin-Medium text-dove-gray">{{ section.settings.otp_resend }}</h4>
          {% comment %} <a href="#" class="underline text/[14px]/[20px] text-flame-pea font-AnekLatin-Medium">Resend OTP</a> {% endcomment %}
        </div>
      </form>
      {% if section.settings.alredy_user != blank %}
        <div class="text-center">
          <a
            href="{{ section.settings.alredy_user_link }}"
            class="border-b border-solid border-grain-brown px-1 font-AnekLatin-Bold text-[14px]/[16px] text-mine-shaft"
          >
            {{- section.settings.alredy_user -}}
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Login with OTP",
  "class": "section-login-with-otp",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile image"
    },
    {
      "type": "header",
      "content": "Form details"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Lorem Ipsum is simply dummy text"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua.</p>"
    },
    {
      "type": "richtext",
      "id": "otp_title",
      "label": "OTP title",
      "default": "<p>Enter Otp Sent On phone no.</p>"
    },
    {
      "type": "richtext",
      "id": "otp_resend",
      "label": "Resend OTP text",
      "default": "<p>Resend OTP</p>"
    },
    {
      "type": "text",
      "id": "alredy_user",
      "label": "Footer text",
      "default": "Or Skip directly to analysis"
    },
    {
      "type": "url",
      "id": "alredy_user_link",
      "label": "Footer link"
    }
  ],
  "presets": [
    {
      "name": "Login with OTP"
    }
  ]
}
{% endschema %}
