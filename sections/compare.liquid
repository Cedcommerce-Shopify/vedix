{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div
  class="bg-quarter-spanish-white section-{{ section.id }}-padding"
>
  <div class="container mx-auto px-4">
    <h2 class="mb-6 text-center font-AnekLatin-SemiBold text-[28px]/[32px] text-woodsmoke md:text-[42px]/[58px]">
      {{ section.settings.heading }}
    </h2>
    <div class="mx-auto max-w-[602px]">
      <div class="flex max-h-[190px] overflow-hidden">
        {% if section.settings.product_image_1 %}
          <span class="block w-2/4">
            <img
              src="{{ section.settings.product_image_1 | img_url:'master' }}"
              width="{{ section.settings.product_image_1.width }}"
              height="{{ section.settings.product_image_1.height }}"
              alt="{{ section.settings.product_image_1.alt }}"
              class="h-full w-full"
            >
          </span>
        {% endif %}
        {% if section.settings.product_image_2 %}
          <span class="block w-3/4">
            <img
              src="{{ section.settings.product_image_2 | img_url:'master' }}"
              width="{{ section.settings.product_image_2.width }}"
              height="{{ section.settings.product_image_2.height }}"
              alt="{{ section.settings.product_image_2.alt }}"
              class="h-full w-full"
            >
          </span>
        {% endif %}
      </div>
      <div class="mb-4 mt-10 flex items-center border border-solid border-mercury bg-merino">
        {% if section.settings.col_text_1 != blank %}
          <div class="max-w-[45%] flex-[0_0_100%] bg-merino px-[10px] py-4 font-AnekLatin-Medium">
            {{ section.settings.col_text_1 }}
          </div>
        {% endif %}
        {% if section.settings.col_text_2 != blank %}
          <div class="max-w-[25%] flex-[0_0_100%] bg-merino px-[10px] py-4 font-AnekLatin-Medium">
            {{ section.settings.col_text_2 }}
          </div>
        {% endif %}
        {% if section.settings.col_text_3 != blank %}
          <div class="max-w-[30%] flex-[0_0_100%] bg-surf px-[10px] py-4 font-AnekLatin-Medium">
            {{ section.settings.col_text_3 }}
          </div>
        {% endif %}
      </div>
      <ul class="mt-[20px] flex flex-col gap-y-[10px]">
        {% for block in section.blocks %}
          <li class="flex items-stretch border border-solid border-mercury bg-merino">
            <div class="max-w-[45%] flex-[0_0_100%] bg-merino px-[10px] py-4">{{ block.settings.title }}</div>
            <div class="flex max-w-[25%] flex-[0_0_100%] items-center justify-center bg-merino px-[10px] py-4">
              <img
                src="{{ block.settings.product_icon_1 | img_url: 'master' }}"
                loading="lazy"
                width="{{ block.settings.product_icon_1.width }}"
                height="{{ block.settings.product_icon_1.height }}"
                alt="{{ block.settings.product_icon_1.alt }}"
              >
            </div>
            <div class="flex max-w-[30%] flex-[0_0_100%] items-center justify-center bg-surf px-[10px] py-4">
              <img
                src="{{ block.settings.product_icon_2 | img_url: 'master' }}"
                loading="lazy"
                width="{{ block.settings.product_icon_2.width }}"
                height="{{ block.settings.product_icon_2.height }}"
                alt="{{ block.settings.product_icon_2.alt }}"
              >
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Compare",
  "class": "section-ayurvedic-profile",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Heading"
    },
    {
      "type": "image_picker",
      "id": "product_image_1",
      "label": "Product image"
    },
    {
      "type": "image_picker",
      "id": "product_image_2",
      "label": "Product image"
    },
    {
      "type": "header",
      "content": "Column header"
    },
    {
      "type": "text",
      "id": "col_text_1",
      "label": "Column 1"
    },
    {
      "type": "text",
      "id": "col_text_2",
      "label": "Column 2"
    },
    {
      "type": "text",
      "id": "col_text_3",
      "label": "Column 3"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "row",
      "name": "Block",
      "limit": 16,
      "settings": [
        {
          "type": "richtext",
          "id": "title",
          "label": "Description"
        },
        {
          "type": "image_picker",
          "id": "product_icon_1",
          "label": "Product image"
        },
        {
          "type": "image_picker",
          "id": "product_icon_2",
          "label": "Product image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Compare"
    }
  ]
}
{% endschema %}
