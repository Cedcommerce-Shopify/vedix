<div class="bg-white pt-[30px] pb-[60px] px-[20px]" style="background-image:url({{ section.settings.background_image  |  img_url: 'master'}});background-repeat: no-repeat;background-size: cover;">
  <div class="container m-auto">
    <div id="block-content" class="">
      <div class="flex max-w-3xl flex-col">
        <div class="w-2/4 max-w-3xl w-full">
          <h2 class="text-[28px]/[32px] text-woodsmoke text-left font-semibold">{{ section.settings.heading }}</h2>
          <div class="text-left text-[16px]/[22px] text-woodsmoke mt-[20px]">
            {{ section.settings.info }}
          </div>
        </div>
        <div id="list-items" class="mt-[30px] w-2/4	max-w-3xl w-full">
          <h3 class="text-left text-[16px]/[24px] text-woodsmoke font-semibold">{{ section.settings.subheading }}</h3>
          <ul class="grid grid-cols-3 gap-[10px] my-[10px] h-full">
            {% for block in section.blocks %}
              <li class="text-center">
                <div class="w-full">
                  {% if block.settings.images != blank %}
                    <img
                      src="{{ block.settings.images |  img_url: 'master' }}"
                      width="{{ block.settings.images }}"
                      height="{{ block.settings.images }}"
                      loading="lazy"
                      alt=""
                      class="w-full" />
                  {% endif %}
                </div>
                <p class="text-center text-[12px]/[16px] text-woodsmoke mt-[10px] font-bold capitalize">{{ block.settings.label }}</p>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Text With Instruction",
    "class": "section-text-with-instruction",
    "tag": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background-image"
      }, {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }, {
        "type": "richtext",
        "id": "info",
        "label": "Information"
      }, {
        "type": "text",
        "id": "subheading",
        "label": "Subheading"
      }
    ],
    "blocks": [
      {
        "type": "column",
        "name": "Block",
        "limit": 3,
        "settings": [
          {
            "type": "image_picker",
            "id": "images",
            "label": "Image"
          }, {
            "type": "text",
            "id": "label",
            "label": "Label"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Text With Instruction"
      }
    ]
  }
{% endschema %}