<div class="bg-merino py-6">
  <div class="container mx-auto px-4">
    <h2 class="text-[28px]/[32px] text-woodsmoke text-left font-AnekLatin-SemiBold mb-6">{{ section.settings.heading }}</h2>
    <div class="text-center">
      <div class="flex flex-col sm:flex-row md:flex-row gap-8">
        {% if section.settings.col_image != blank %}
          <div class="flex-auto border border-solid border-woodsmoke">
            <img
              src="{{ section.settings.col_image | img_url: 'master' }}"
              loading="lazy"
              width="{{ section.settings.col_image.width }}"
              height="{{ section.settings.col_image.height }}"
              alt="{{ section.settings.col_image.alt }}" />
          </div>
        {% endif %}
        <div id="v_icon_check" class="flex items-center flex-auto text-[16px]/[20px] text-woodsmoke text-left">
          {{ section.settings.paragraph }}
        </div>
      </div>
      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="my-6 inline-flex items-center justify-center gap-2 border border-solid border-woodsmoke bg-flame-pea px-7 py-3 text-[16px]/[16px] font-AnekDevanagari-SemiBold leading-normal tracking-normal text-white">{{ section.settings.button_text }}
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="11.796"
            height="10.315"
            viewBox="0 0 11.796 10.315">
            <g
              id="Group_8849"
              data-name="Group 8849"
              transform="translate(-215.754 -537.843)">
              <path
                id="Icon_ionic-ios-arrow-forward"
                data-name="Icon ionic-ios-arrow-forward"
                d="M15.366,11.352l-3.9-3.9a.734.734,0,0,1,0-1.041.743.743,0,0,1,1.044,0l4.422,4.419a.736.736,0,0,1,.021,1.016L12.51,16.3a.737.737,0,0,1-1.044-1.041Z"
                transform="translate(204.508 531.646)"
                fill="#fff"></path>
              <path
                id="Icon_ionic-ios-arrow-forward-2"
                data-name="Icon ionic-ios-arrow-forward"
                d="M15.366,11.352l-3.9-3.9a.734.734,0,0,1,0-1.041.743.743,0,0,1,1.044,0l4.422,4.419a.736.736,0,0,1,.021,1.016L12.51,16.3a.737.737,0,0,1-1.044-1.041Z"
                transform="translate(210.406 531.646)"
                fill="#fff"></path>
            </g>
          </svg>
        </a>
      {% endif %}
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Image with Text Vedix",
    "class": "section",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "info": "Add section heading here"
      },
      {
        "type": "image_picker",
        "id": "col_image",
        "label": "Image"
      },
      {
        "type": "richtext",
        "id": "paragraph",
        "label": "Add info here"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button text"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }
    ],
    "presets": [
      {
        "name": "Image with Text Vedix"
      }
    ]
  }
{% endschema %}