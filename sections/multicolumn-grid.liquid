<div class="bg-ecru-white py-8">
  <div class="container mx-auto px-4 text-center">
    <h2 class="text-[28px]/[32px] text-woodsmoke text-left font-AnekLatin-SemiBold mb-6">{{ section.settings.heading }}</h2>
    <ul class="grid grid-cols-3 gap-3" role="grid">
      {%- for block in section.blocks -%}
        <li class="flex flex-col gap-8" role="gridcell">
          <div class="bg-linen rounded-lg p-4 text-left">{{ block.settings.paragraph }}</div>
          <div class="flex flex-col items-center justify-center gap-3">
            {% if block.settings.col_image != blank %}
              <span class="rounded-full overflow-hidden">
                <img
                  src="{{ block.settings.col_image | img_url: '64px' }}"
                  loading="lazy"
                  width="64"
                  height="64"
                  alt="{{ block.settings.alt }}" />
              </span>
            {% endif %}
            <p class="text-black text-[16px]/[18px] uppercase font-AnekLatin-Bold tracking-tight">{{ block.settings.title }}</p>
          </div>
        </li>
      {%- endfor -%}
    </ul>
    {% if section.settings.button_text != blank %}
      <a
        href="{{ section.settings.button_link }}"
        class="my-6 inline-flex items-center justify-center gap-2 border border-solid border-woodsmoke bg-flame-pea px-7 py-3 text-[16px]/[16px] font-AnekDevanagari-SemiBold leading-normal tracking-normal text-white"
        role="button">{{ section.settings.button_text }}
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="11.796"
          height="10.315"
          viewBox="0 0 11.796 10.315">
          <g
            id="Group_8849"
            data-name="Group 8849"
            transform="translate(-215.754 -537.843)">
            <path
              id="Icon_ionic-ios-arrow-forward"
              data-name="Icon ionic-ios-arrow-forward"
              d="M15.366,11.352l-3.9-3.9a.734.734,0,0,1,0-1.041.743.743,0,0,1,1.044,0l4.422,4.419a.736.736,0,0,1,.021,1.016L12.51,16.3a.737.737,0,0,1-1.044-1.041Z"
              transform="translate(204.508 531.646)"
              fill="#fff"></path>
            <path
              id="Icon_ionic-ios-arrow-forward-2"
              data-name="Icon ionic-ios-arrow-forward"
              d="M15.366,11.352l-3.9-3.9a.734.734,0,0,1,0-1.041.743.743,0,0,1,1.044,0l4.422,4.419a.736.736,0,0,1,.021,1.016L12.51,16.3a.737.737,0,0,1-1.044-1.041Z"
              transform="translate(210.406 531.646)"
              fill="#fff"></path>
          </g>
        </svg>
      </a>
    {% endif %}
  </div>
</div>
{% schema %}
  {
    "name": "Multicolumn Grid Vedix",
    "class": "section",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "info": "Add section heading here"
      }, {
        "type": "text",
        "id": "button_text",
        "label": "Button text"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }
    ],
    "blocks": [
      {
        "type": "column",
        "name": "Block",
        "limit": 3,
        "settings": [
          {
            "type": "richtext",
            "id": "paragraph",
            "label": "Paragraph",
            "info": "Add info about the field here"
          }, {
            "type": "image_picker",
            "id": "col_image",
            "label": "Image"
          }, {
            "type": "inline_richtext",
            "id": "title",
            "label": "Add image title here"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Multicolumn Grid Vedix"
      }
    ]
  }
{% endschema %}