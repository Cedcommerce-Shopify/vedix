{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div
  id="tabs"
  class="section-{{ section.id }}-padding"
  style="background-color:{{ section.settings.section_bg }};"
>
  <div class="container mx-auto px-4">
    <div id="tab-head" class="-mx-4 md:mx-auto">
      <div class="flex items-center gap-1">
        {% if section.settings.title != blank %}
          <div
            class="tab-btn before:content[''] relative mx-auto w-full py-2 text-center before:absolute before:-bottom-1 before:left-0 before:h-full before:w-full before:border-b-[4px] before:border-solid before:border-flame-pea"
            data-tab="hair-care"
            style="background-color:{{ section.settings.tab_bg }};"
          >
            <a href="" class="font-AnekLatin-Bold text-[13px]/[22px] text-woodsmoke lg:text-[16px]/[19px]">
              {{- section.settings.title -}}
            </a>
          </div>
        {% endif %}
        {% if section.settings.title_2 != blank %}
          <div
            class="tab-btn relative mx-auto w-full py-2 text-center"
            data-tab="skin-care"
            style="background-color:{{ section.settings.tab_bg }};"
          >
            <a href="" class="font-AnekLatin-SemiBold text-[13px]/[22px] text-woodsmoke lg:text-[16px]/[19px]">
              {{- section.settings.title_2 -}}
            </a>
          </div>
        {% endif %}
      </div>
    </div>
    <div id="tab-content" class="mt-12">
      {% if section.settings.title != blank %}
        <div id="hair-care">
          <h2 class="mb-4 font-AnekLatin-Bold text-[28px]/[32px] text-woodsmoke md:text-[42px]/[58px]">
            {{ section.settings.heading }}
          </h2>
          <div class="mb-4 text-[16px]/[22px] text-woodsmoke">
            {{ section.settings.intro }}
          </div>
          <ul class="-m-4 grid auto-cols-[20rem] grid-flow-col gap-x-[20px] overflow-x-auto p-4 md:grid-cols-3">
            {%- for block in section.blocks -%}
              {%- if block.type == 'block_content' -%}
                <li class="mt-[20px] bg-white p-[5px]" style="box-shadow: 0px 0px 15px #0000001a;">
                  {%- assign image = block.settings.image -%}
                  <div class="block">
                    {% if image != blank %}
                      {{ image | image_url: width: image.width | image_tag: class: 'w-full h-full', loading: 'lazy' }}
                    {% else %}
                      {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg h-full w-full' }}
                    {% endif %}
                  </div>
                  <div class="mt-[15px] px-[12px]">
                    <h3 class="mb-2 font-AnekLatin-SemiBold text-[16px]/[22px] text-woodsmoke md:text-[24px]/[28px]">
                      {{ block.settings.title }}
                    </h3>
                    <h4 class="mb-4 font-AnekLatin-Medium text-[14px]/[22px] text-woodsmoke md:font-AnekLatin-SemiBold md:text-[16px]/[22px]">
                      {{ block.settings.sub_title }}
                    </h4>
                    <div
                      id="v_icon_check"
                      class="mb-8 mt-4 flex flex-col flex-wrap justify-center gap-2 text-left text-[16px]/[20px] text-woodsmoke"
                    >
                      {{ block.settings.paragraph }}
                    </div>
                  </div>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
      {% endif %}
      <div id="skin-care" style="display:none">
        <h2 class="mb-[20px] font-AnekLatin-Bold text-[28px]/[32px] text-woodsmoke">
          {{ section.settings.heading_2 }}
        </h2>
        <p class="text-[16px]/[22px] text-woodsmoke">
          {{ section.settings.intro_2 }}
        </p>
        <div class="-m-4 grid grid-cols-3 gap-x-[20px] p-4">
          {%- for block in section.blocks -%}
            {%- if block.type == 'block_content_2' -%}
              <div class="mt-[20px] bg-white p-[5px]" style="box-shadow: 0px 0px 15px #0000001a;">
                {%- assign image = block.settings.image -%}
                <div class="block">
                  {% if image != blank %}
                    {{ image | image_url: width: image.width | image_tag: class: 'w-full h-full', loading: 'lazy' }}
                  {% else %}
                    {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg h-full w-full' }}
                  {% endif %}
                </div>
                <div class="mt-[15px] px-[12px]">
                  <h3 class="mb-2 font-AnekLatin-SemiBold text-[16px]/[22px] text-woodsmoke md:text-[24px]/[28px]">
                    {{ block.settings.title }}
                  </h3>
                  <h4 class="mb-4 font-AnekLatin-Medium text-[14px]/[22px] text-woodsmoke md:font-AnekLatin-SemiBold md:text-[16px]/[22px]">
                    {{ block.settings.sub_title }}
                  </h4>
                  <div
                    id="v_icon_check"
                    class="mb-8 mt-4 flex flex-col flex-wrap justify-center gap-2 text-left text-[16px]/[20px] text-woodsmoke"
                  >
                    {{ block.settings.paragraph }}
                  </div>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
    {% if section.settings.button_text != blank %}
      <div class="mx-auto mt-[48px] text-center">
        <a
          href="{{ section.settings.button_link }}"
          class="btn "
          role="button"
        >
          <span class="mb-[-2px] mt-[2px]">{{ section.settings.button_text }}</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="11.796"
            height="10.315"
            viewBox="0 0 11.796 10.315"
          >
            <g
              id="Group_8849"
              data-name="Group 8849"
              transform="translate(-215.754 -537.843)">
              <path
                id="Icon_ionic-ios-arrow-forward"
                data-name="Icon ionic-ios-arrow-forward"
                d="M15.366,11.352l-3.9-3.9a.734.734,0,0,1,0-1.041.743.743,0,0,1,1.044,0l4.422,4.419a.736.736,0,0,1,.021,1.016L12.51,16.3a.737.737,0,0,1-1.044-1.041Z"
                transform="translate(204.508 531.646)"
                fill="#fff"></path>
              <path
                id="Icon_ionic-ios-arrow-forward-2"
                data-name="Icon ionic-ios-arrow-forward"
                d="M15.366,11.352l-3.9-3.9a.734.734,0,0,1,0-1.041.743.743,0,0,1,1.044,0l4.422,4.419a.736.736,0,0,1,.021,1.016L12.51,16.3a.737.737,0,0,1-1.044-1.041Z"
                transform="translate(210.406 531.646)"
                fill="#fff"></path>
            </g>
          </svg>
        </a>
      </div>
    {% endif %}
  </div>
</div>
