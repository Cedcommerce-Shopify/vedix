{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div id="about-us" class="section-{{ section.id }}-padding">
  <h2 class="container mx-auto px-4 py-[25px] font-AnekLatin-Bold text-[18px]/[28px] text-black">{{ page.title }}</h2>
  {%- assign banner_image = section.settings.banner_image -%}
  <div class="banner h-full w-full">
    {% if banner_image != blank %}
      {{
        banner_image
        | image_url: width: banner_image.width
        | image_tag: class: 'banner-img min-h-[170px] w-full h-full', loading: 'lazy'
      }}
    {% else %}
      {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg w-full h-full' }}
    {% endif %}
  </div>
  <div class="container mx-auto px-4">
    <h3 class="mt-[30px] font-AnekLatin-Bold text-[18px]/[28px] text-black">{{ section.settings.heading }}</h3>
    {% if section.settings.body != blank %}
      <div class="mt-[18px] text-[14px]/[20px] text-black">
        {{ section.settings.body }}
      </div>
    {% endif %}
    {%- assign body_image = section.settings.body_image -%}
    <div class="mt-[40px]">
      {% if body_image != blank %}
        {{ body_image | image_url: width: body_image.width | image_tag: class: 'h-full w-full', loading: 'lazy' }}
      {% else %}
        {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg w-full h-full' }}
      {% endif %}
    </div>
    {% if section.settings.our_value_heading != blank %}
      <h3 class="mt-[30px] font-AnekLatin-Bold text-[18px]/[28px] text-black">
        {{ section.settings.our_value_heading }}
      </h3>
    {% endif %}
    {% if section.settings.our_value_body != blank %}
      <div class="mt-[18px] text-[14px]/[20px] text-black">
        {{ section.settings.our_value_body }}
      </div>
    {% endif %}
  </div>
</div>
{% schema %}
{
  "name": "About Analysis",
  "class": "section-about-analysis",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Lorem Ipsum is simply dummy text"
    },
    {
      "type": "richtext",
      "id": "body",
      "label": "Body",
      "default": "<p>Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua.</p>"
    },
    {
      "type": "image_picker",
      "id": "body_image",
      "label": "Body image"
    },
    {
      "type": "header",
      "content": "Our Values"
    },
    {
      "type": "text",
      "id": "our_value_heading",
      "label": "Heading",
      "default": "Lorem Ipsum is simply dummy text"
    },
    {
      "type": "richtext",
      "id": "our_value_body",
      "label": "Body",
      "default": "<p>Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua.</p>"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ]
}
{% endschema %}
