{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="bg-white section-{{ section.id }}-padding">
  <div class="container mx-auto px-4">
    <div class="mx-auto max-w-[850px] text-center">
      <h2 class="mb-6 font-AnekLatin-SemiBold text-[28px]/[32px] text-woodsmoke md:text-[42px]/[58px]">
        {{ section.settings.title }}
      </h2>
      {% if section.settings.payment_icon != blank %}
        <div class="my-5 flex items-center justify-center">
          <img
            src="{{ section.settings.payment_icon |  img_url: 'master' }}"
            width="{{ section.settings.payment_icon.width }}"
            height="{{ section.settings.payment_icon.height }}"
            alt="{{ section.settings.payment_icon.alt }}"
            loading="lazy"
          >
        </div>
      {% endif %}
      <ul class="my-7 flex snap-x items-center justify-center gap-x-[20px] overflow-x-auto">
        {% for block in section.blocks %}
          <li class="flex w-[100px] snap-start scroll-ml-6 flex-col items-center justify-center gap-3 text-center">
            {% if block.settings.trust_badge != blank %}
              <div class="flex h-[100px] w-[100px] items-center justify-center rounded bg-white-lilac">
                <img
                  src="{{ block.settings.trust_badge |  img_url: 'master' }}"
                  width="{{ block.settings.trust_badge.width }}"
                  height="{{ block.settings.trust_badge.height }}"
                  alt="{{ block.settings.trust_badge.alt }}"
                  loading="lazy"
                >
              </div>
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Trust Badges",
  "class": "section-trust-badges",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Heading"
    },
    {
      "type": "image_picker",
      "id": "payment_icon",
      "label": "Payment icon"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Block",
      "limit": 8,
      "settings": [
        {
          "type": "image_picker",
          "id": "trust_badge",
          "label": "Trust badge"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Trust Badges"
    }
  ]
}
{% endschema %}
