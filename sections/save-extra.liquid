<div class="bg-[{{- section.settings.bg_color -}}] border border-solid border-yellow-200 px-[20px] py-[40px]">
  <div class="container m-auto">
    <div class="save-extra text-center">
      {%- assign logo = section.settings.logo -%}
      {% if logo != blank %}
        <div class="logo flex justify-center items-center">
          {{ logo | image_url: width: logo.width | image_tag: class: 'w-124 h-100', loading: 'lazy' }}
        </div>
      {% endif %}
      <div class="mt-5">
        <h2 class="text-woodsmoke text-[20px]/[22px] font-bold">{{ section.settings.heading }}</h2>
        <h3 class=" font-bold text-[12px] leading-22 text-woodsmoke opacity-80">{{ section.settings.text }}</h3>
      </div>
      {% if section.blocks.size > 0 %}
        <div class="grid grid-cols-3 md:grid-cols-6 gap-x-4 gap-y-4 justify-center items-center mt-8">
          {%- for block in section.blocks -%}
            <div class="save-extra__item text-center">
              {%- assign icon = block.settings.icon -%}
              {% if icon != blank %}
                {{ icon | image_url: width: icon.width | image_tag: class: 'mx-auto w-[60px] h-[60px]', loading: 'lazy' }}
              {% endif %}
              <p class="text-woodsmoke text-[12px]/[15px] md:[12px]/[15px] lg:text-[16px]/[15px] font-medium opacity-100 mt-[10px] max-w-[118px] m-auto">
                {{ block.settings.title }}
              </p>
            </div>
          {% endfor %}
        </div>
      {% endif %}
      <div class="pricing border rounded-[8px] mt-[30px]">
        <p class="bg-mistyrose px-[5px] opacity-100">You could've saved extra 199 on this order!</p>
        <div class="flex justify-between items-center p-[18px]">
          <div class="pricing-elements">
            <p class="text-[16px] text-woodsmoke text-left font-bold">
              ₹399
              <span class="ml-[10px] text-woodsmoke opacity-40 line-through">₹699</span>
            </p>
            <p class="text-woodsmoke font-bold text-[12px]/[15px] md:[12px]/[15px] lg:text-[16px]/[15px]">
              12 month membership
            </p>
          </div>
          <div class="buy-button">
            <a href="#" class="bg-flame-pea text-white px-[32px] py-[16px] border border-solid border-black">BUY NOW</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Save Extra",
    "settings": [
      {
        "type": "color",
        "id": "bg_color",
        "label": "BG Color",
        "default": "#FFFFFF"
      }, {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      }, {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }, {
        "type": "text",
        "id": "text",
        "label": "Text"
      }
    ],
    "blocks": [
      {
        "name": "Offers",
        "type": "offers",
        "limit": 6,
        "settings": [
          {
            "type": "image_picker",
            "id": "icon",
            "label": "Icon"
          }, {
            "type": "text",
            "id": "title",
            "label": "Text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Save Extra"
      }
    ]
  }
{% endschema %}