                  stroke-linejoin="round"
                  stroke-width="0.938" />
                <path
                  id="Path_95"
                  data-name="Path 95"
                  d="M2.039,4.752,7.5,7.908l5.456-3.156"
                  fill="none"
                  stroke="#000"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="0.938" />
                <path
                  id="Path_96"
                  data-name="Path 96"
                  d="M7.5,14.2V7.9"
                  fill="none"
                  stroke="#000"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="0.938" />
              </g>
            </svg>
          </span>
          <h4 class="flex items-center gap-2 font-AnekLatin-SemiBold text-[12px]/[18px] text-black">
            My Orders
            <span class="inline-flex">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="5"
                height="10"
                viewBox="0 0 8.013 13.227">
                <path
                  id="Vector"
                  d="M1,11.4,6.6,6.2,1,1"
                  transform="translate(0.413 0.413)"
                  fill="none"
                  stroke="#000"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2" />
              </svg>
            </span>
          </h4>
        </div>
        <p class="text-[12px]/[18px] text-black text-opacity-50">1 order on the way</p>
      </div>

      <div class="mt-8 flex flex-col gap-4 border border-solid border-dove-gray bg-white p-4">
        <div class="flex items-baseline justify-between">
          <h4 class="font-AnekLatin-Bold text-[16px]/[26px] text-black">{{ section.settings.renew_heading }}</h4>
          <span class="inline-flex items-center rounded-[8px] bg-quarter-spanish-white px-4 py-1 font-AnekLatin-SemiBold text-[10px]/[14px] uppercase text-cape-palliser">
            {{- section.settings.renew_tag -}}
          </span>
        </div>
        <div class="text-[14px]/[18px] text-black">{{ section.settings.renew_description }}</div>
        <div class="flex items-center justify-between">
          <a href="#" class="text-[14px]/[26px] text-burnt-sienna">Edit Routine</a>
          {% if section.settings.button_text != blank %}
            <a
              href="{{ section.settings.button_link }}"
              class="btn min-w-fit"
              role="button">
              <span class="mb-[-2px] mt-[2px]">{{ section.settings.button_text }}</span>
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>
