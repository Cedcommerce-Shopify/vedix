{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div id="info" class="bg-soapstone section-{{ section.id }}-padding">
  <div class="container mx-auto px-4">
    <div class="mb-8 flex flex-wrap items-start gap-8">
      <div class="flex max-w-full flex-[0_0_100%] flex-col gap-8 md:max-w-[calc(100%-353px)]">
        <h2 class="text-center font-AnekLatin-SemiBold text-[18px]/[26px] text-mine-shaft md:text-left md:text-[56px]/[58px] md:text-woodsmoke">
          {{ section.settings.heading }}
        </h2>
        <div class="text-center text-[14px]/[24px] text-mine-shaft md:text-left md:text-[18px]/[26px] md:text-woodsmoke">
          {{ section.settings.description }}
        </div>
      </div>
      <div class="mx-auto grid max-w-[321px] flex-[0_0_100%] grid-cols-2 border border-solid border-mine-shaft">
        <div class="block h-full">
          {% if section.settings.user_image != blank %}
            <img
              src="{{ section.settings.user_image | img_url: 'master' }}"
              loading="lazy"
              width="{{ section.settings.user_image.width }}"
              height="{{ section.settings.user_image.height }}"
              alt="{{ section.settings.user_image.alt }}"
              class="h-full"
            >
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg w-full h-full' }}
          {% endif %}
        </div>
        <div class="flex flex-col justify-between p-4">
          <div class="flex items-center gap-x-[10px]">
            <span class="flex h-[47px] w-[47px] items-center justify-center">
              {% if section.settings.expertise_icon != blank %}
                <img
                  src="{{ section.settings.expertise_icon | img_url: 'master' }}"
                  loading="lazy"
                  width="{{ section.settings.expertise_icon.width }}"
                  height="{{ section.settings.expertise_icon.height }}"
                  alt="{{ section.settings.expertise_icon.alt }}"
                >
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg w-full h-full' }}
              {% endif %}
            </span>
            <p class="text-[12px]/[16px] text-mine-shaft">{{ section.settings.expertise }}</p>
          </div>
          <h2 class="font-AnekLatin-SemiBold text-[18px]/[26px] text-mine-shaft">{{ section.settings.user_name }}</h2>
        </div>
      </div>
    </div>
    <div class="flex flex-col gap-6">
      <div class="text-center text-[14px]/[24px] text-mine-shaft md:text-left md:font-AnekLatin-SemiBold md:text-[24px]/[32px] md:text-woodsmoke">
        {{ section.settings.analysis }}
      </div>
      <ul class="mx-auto flex max-w-[175px] items-center justify-center gap-4 md:ml-0 md:max-w-none md:justify-start md:gap-14">
        {%- for block in section.blocks -%}
          <li class="flex flex-col items-center gap-3 md:gap-12">
            <span class="flex h-[47px] w-[47px] items-center justify-center rounded-full bg-quarter-spanish-white md:h-[90px] md:w-[90px]">
              {% if block.settings.hair_type != blank %}
                <img
                  src="{{ block.settings.hair_type | img_url: 'master' }}"
                  loading="lazy"
                  width="{{ block.settings.hair_type.width }}"
                  height="{{ block.settings.hair_type.height }}"
                  alt="{{ block.settings.hair_type.alt }}"
                >
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg w-full h-full' }}
              {% endif %}
            </span>
            <h4 class="text-center text-[14px]/[14px] text-mine-shaft md:font-AnekLatin-Medium md:text-[16px]/[18px] md:text-woodsmoke">
              {{ block.settings.title }}
            </h4>
          </li>
        {%- endfor -%}
      </ul>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "User BIO",
  "class": "section-user-bio",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Lorem Ipsum is simply dummy text"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua.</p>"
    },
    {
      "type": "image_picker",
      "id": "user_image",
      "label": "User image",
      "info": "Upload user image"
    },
    {
      "type": "image_picker",
      "id": "expertise_icon",
      "label": "Expert icon",
      "info": "Upload expert icon"
    },
    {
      "type": "text",
      "id": "expertise",
      "label": "Expertise title",
      "default": "Expert Ayurvedic Formulator"
    },
    {
      "type": "text",
      "id": "user_name",
      "label": "User name",
      "default": "Lorem ipsum"
    },
    {
      "type": "richtext",
      "id": "analysis",
      "label": "Add info here",
      "default": "<p>Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua.</p>"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "hair_type",
          "label": "Product image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Product title",
          "default": "Lorem Ipsum is simply dummy text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "User BIO"
    }
  ]
}
{% endschema %}
