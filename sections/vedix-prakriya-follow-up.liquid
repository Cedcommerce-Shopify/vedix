  style="background-color:{{ section.settings.section_bg }};"
>
  <div class="container mx-auto px-4">
    <div class="mb-9 flex items-center justify-center gap-2">
      <div class="block h-[53px] w-[53px]">
        {% if section.settings.product_img != blank %}
          <img
            src="{{ section.settings.product_img |  img_url: 'master'}}"
            width="{{ section.settings.product_img.width }}"
            height="{{ section.settings.product_img.height }}"
            loading="lazy"
          >
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg w-full h-full' }}
        {% endif %}
      </div>
      <h3 class="font-AnekLatin-Bold text-[20px]/[24px] text-black">
        {{ section.settings.heading }}
      </h3>
    </div>
    <div class="rounded-[8px] bg-white p-3">
      <p class="text-[12px]/[24px] text-black text-opacity-50">Follow-Up for:</p>
      <ul role="product-list">
        <li>
          <div class="relative flex w-full items-center gap-4">
            <div class="h-[60px] w-[60px] flex-none">
