<div class="flex flex-row bg-givry relative before:content-[''] before:block before:pb-[100%] md:before:pb-[38%] py-4">
  <div class="image-with-text__image flex flex-row absolute top-0 right-0 bottom-0 left-0 w-full h-full before:content-[''] before:block before:pb-[100%] md:before:pb-[38%]">
    <img
      class="absolute top-0 left-0 bottom-0 right-0 w-full h-full object-cover object-center"
      src="{{ section.settings.image |  img_url: 'master' }}')"
      loading="lazy"
      width="{{ section.settings.image.width }}"
      height="{{ section.settings.image.height }}"
      alt="{{ section.settings.image.alt }}" />
  </div>
  <div class="image-with-text__content container mx-auto px-4 flex flex-col w-full justify-start md:justify-center relative">
    <h1 class="text-woodsmoke font-bold text-[34px]/[36px] mb-3 font-AnekLatin-SemiBold">{{ section.settings.heading }}</h1>
    <div class="text-woodsmoke">{{ section.settings.paragraph }}</div>
    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="my-6 inline-flex items-center justify-center gap-2 border border-solid border-woodsmoke bg-flame-pea px-7 py-3 text-[16px]/[16px] font-AnekDevanagari-SemiBold leading-normal tracking-normal text-white absolute bottom-0 left-1/2 -translate-x-1/2 md:relative md:left-0 md:-translate-x-0 w-max">{{ section.settings.button_text }}
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="11.796"
          height="10.315"
          viewBox="0 0 11.796 10.315">
          <g
            id="Group_8849"
            data-name="Group 8849"
            transform="translate(-215.754 -537.843)">
            <path
              id="Icon_ionic-ios-arrow-forward"
              data-name="Icon ionic-ios-arrow-forward"
              d="M15.366,11.352l-3.9-3.9a.734.734,0,0,1,0-1.041.743.743,0,0,1,1.044,0l4.422,4.419a.736.736,0,0,1,.021,1.016L12.51,16.3a.737.737,0,0,1-1.044-1.041Z"
              transform="translate(204.508 531.646)"
              fill="#fff"></path>
            <path
              id="Icon_ionic-ios-arrow-forward-2"
              data-name="Icon ionic-ios-arrow-forward"
              d="M15.366,11.352l-3.9-3.9a.734.734,0,0,1,0-1.041.743.743,0,0,1,1.044,0l4.422,4.419a.736.736,0,0,1,.021,1.016L12.51,16.3a.737.737,0,0,1-1.044-1.041Z"
              transform="translate(210.406 531.646)"
              fill="#fff"></path>
          </g>
        </svg>
      </a>
    {% endif %}
  </div>
</div>
{% schema %}
  {
    "name": "Image Banner Vedix",
    "class": "section-image-banner",
    "tag": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image",
        "info": "Add image here"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "richtext",
        "id": "paragraph",
        "label": "Paragraph",
        "info": "Add section info here"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button text"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }
    ],
    "presets": [
      {
        "name": "Image Banner Vedix"
      }
    ]
  }
{% endschema %}