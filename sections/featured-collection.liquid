{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="bg-soapstone section-{{ section.id }}-padding" style="background-color: {{ section.settings.section_bg }}">
  <div class="container mx-auto px-4">
    {% if section.settings.heading != blank %}
      <h2 class="mb-7 font-AnekLatin-Bold text-[32px]/[32px] text-woodsmoke md:mb-5 md:text-[28px]/[32px]">
        {{ section.settings.heading }}
      </h2>
    {% endif %}
    <ul class="-mr-4 grid auto-cols-[20rem] grid-flow-col gap-2 overflow-x-auto md:mr-0 md:auto-cols-auto md:grid-flow-row md:grid-cols-3 md:gap-4">
      {% assign collection_data = section.settings.collections %}
      {% assign product_data = collection_data.products %}
      {% for product in product_data %}
        <li class="col-span-1 border border-solid border-spring-wood">
          <a href="{{ product.url }}" class="block">
            <span class="relative inline-block h-full w-full before:inline-block before:h-0 before:w-0 before:pb-[65%] before:content-['']">
              <img
                src="{{product.featured_image |  img_url: 'medium'}}"
                alt="Product"
                class="absolute bottom-0 left-0 right-0 top-0 h-full w-full object-cover object-center">
            </span>
            <div class="flex w-full flex-col gap-[10px] bg-white p-4">
              <h3 class="mb-3 truncate font-AnekLatin-Bold text-[24px]/[22px] capitalize text-woodsmoke">
                {{ product.title }}
              </h3>
              <div id="rating" class="mb-3 mt-2 flex gap-2">
                <div class="flex items-center gap-1">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16.667"
                    height="16.66"
                    viewBox="0 0 16.667 16.66">
                    <path
                      id="Path_13649"
