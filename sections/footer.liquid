{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- assign bg_image = section.settings.bg_image -%}
<div
  class="section-{{ section.id }}-padding"
  style="
    background: transparent linear-gradient(180deg, #ffffff 0%, #ffffff00 100%) 0% 0% no-repeat padding-box;
    background-image: url({{ bg_image | img_url:'master' }});
    background-repeat: no-repeat;
    background-size: cover;background-position: bottom;
  "
>
  <div class="container mx-auto px-4">
    <div class="flex flex-wrap justify-between gap-y-[60px]">
      <div class="footer-column relative w-full after:absolute after:top-[130%] after:h-[2px] after:w-full after:bg-cameo after:opacity-70 after:content-[''] md:w-[30%] md:after:right-[-30%] md:after:top-[50%] md:after:w-[200px] md:after:rotate-90">
        <div>
          <h2 class="mb-[10px] font-AnekLatin-SemiBold text-[16px]/[22px] uppercase text-bull-shot">
            {{ section.settings.heading }}
          </h2>
          <p class="max-w-[360px] font-AnekLatin-Medium text-[14px]/[22px] text-black">
            {{ section.settings.text }}
          </p>
          <p class="font-AnekLatin-Medium text-[14px]/[22px] text-black">
            Email: <a href="mailto:{{- section.settings.email -}}">{{ section.settings.email }} </a>
          </p>
          <p class="font-AnekLatin-Medium text-[14px]/[22px] text-black">
            WhatsApp:
            <a href="+{{- section.settings.whatsapp -}}">+{{ section.settings.whatsapp }} (9AM-6PM, Mon-Sat)</a>
          </p>
        </div>
      </div>

      <div class="footer-column relative w-full after:absolute after:top-[130%] after:h-[2px] after:w-full after:bg-cameo after:opacity-70 after:content-[''] md:w-[30%] md:after:right-[-30%] md:after:top-[50%] md:after:w-[200px] md:after:rotate-90">
        <div>
          <h2 class="mb-[10px] font-AnekLatin-SemiBold text-[16px]/[22px] uppercase text-bull-shot">
            {{ section.settings.manu_heading }}
          </h2>
          <p class="ttext-[14px]/[22px] max-w-[420px] font-AnekLatin-Medium text-black">
            {{ section.settings.manu_text }}
          </p>
        </div>
      </div>

      <div class="footer-column relative w-full md:w-[30%]">
        <div>
          <h2 class="mb-[10px] font-AnekLatin-SemiBold text-[16px]/[22px] uppercase text-bull-shot">
            {{ section.settings.copy_heading }}
          </h2>
          <p class="font-AnekLatin-Medium text-[14px]/[22px] text-black">
            Copyright {{ 'now' | date: '%Y' }} | {{ section.settings.copy_text }}
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Footer",
  "class": "site-footer",
  "tag": "footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "BG Image"
    },
    {
      "type": "header",
      "content": "Manufactured & Marketed By"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Lorem Ipsum is simply dummy text"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Vivamus semper pharetra quam.</p>"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "example@gamil.com"
    },
    {
      "type": "text",
      "id": "whatsapp",
      "label": "WhatsApp"
    },
    {
      "type": "header",
      "content": "Manufactured At"
    },
    {
      "type": "text",
      "id": "manu_heading",
      "label": "Heading",
      "default": "Lorem Ipsum is simply dummy text"
    },
    {
      "type": "richtext",
      "id": "manu_text",
      "label": "Text",
      "default": "<p>Vivamus semper pharetra quam.</p>"
    },
    {
      "type": "header",
      "content": "Copyrights"
    },
    {
      "type": "text",
      "id": "copy_heading",
      "label": "Heading",
      "default": "Lorem Ipsum is simply dummy text"
    },
    {
      "type": "text",
      "id": "copy_text",
      "label": "Text",
      "default": "<p>Vivamus semper pharetra quam.</p>"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 300,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 240
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 300,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 220
    }
  ],
  "presets": [
    {
      "name": "Footer"
    }
  ]
}
{% endschema %}
