{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div
  class="bg-cover bg-center bg-no-repeat section-{{ section.id }}-padding"
  style="background-color: {{ section.settings.section_bg }};"
>
  <div class="container mx-auto px-4">
    <h3 class="mb-2 font-AnekLatin-Bold text-[14px]/[26px] uppercase text-black">
      {{ section.settings.welcome_heading }}
    </h3>
    {% if section.settings.heading != blank %}
      <h2 class="mb-3 font-AnekLatin-Bold text-[32px]/[40px] text-black">
        {{ section.settings.heading }}
      </h2>
    {% endif %}
    <p class="mb-6 font-AnekLatin-Medium text-[16px]/[22px] text-woodsmoke">{{ section.settings.description }}</p>
    <ul class="-mr-4 grid auto-cols-[16rem] grid-flow-col items-center gap-3 overflow-x-auto pr-4 md:mr-0 md:grid-cols-3 md:pr-0">
      {% assign recommended_blocks = section.blocks | where: 'type', 'recommended' %}
      {%- for block in recommended_blocks -%}
        <li class="relative border border-solid border-silver bg-quarter-spanish-white">
          <h2
            class="px-4 py-2 text-center font-AnekLatin-Bold text-[14px]/[16px] uppercase text-black"
            style="background-color: {{ block.settings.block_bg }};"
          >
            {{ block.settings.block_header }}
          </h2>
          <div class="relative inline-block h-full w-full bg-quarter-spanish-white before:inline-block before:h-0 before:w-0 before:pb-[70%] before:content-['']">
            {% if block.settings.product_image != blank %}
              <img
                src="{{ block.settings.product_image | img_url: 'master' }}"
                loading="lazy"
                width="{{ block.settings.product_image.width }}"
                height="{{ block.settings.product_image.height }}"
                alt="{{ block.settings.product_image.alt }}"
                class="absolute bottom-0 left-0 right-0 top-0 h-full w-full object-cover object-center"
              >
            {% else %}
              {{
                'detailed-apparel-1'
                | placeholder_svg_tag: 'placeholder-svg absolute bottom-0 left-0 right-0 top-0 h-full w-full object-cover object-center'
              }}
            {% endif %}
          </div>
          <div class="flex flex-col gap-1 px-4 py-3">
            <h3 class="text-[14px]/[16px] text-black text-opacity-60">
              {{ block.settings.product_category }}
            </h3>
            <h2 class="mb-5 font-AnekLatin-Bold text-[16px]/[17px] text-black">{{ block.settings.title }}</h2>
            <div class="mb-3 bg-white px-2 pb-4 pt-2 text-[14px]/[16px] text-black">
              {{ block.settings.product_description }}
            </div>
            <h3 class="text-center font-AnekLatin-Bold text-[20px]/[22px] text-black">
              {{ block.settings.product_price }}
            </h3>
          </div>
          {% if block.settings.button_text != blank %}
            <a
              href="{{ block.settings.button_url }}"
              class="btn w-full min-w-fit border-none"
              role="button"
            >
              <span class="mb-[-2px] mt-[2px]">{{ block.settings.button_text }}</span>
            </a>
          {% endif %}
        </li>
      {%- endfor -%}

      {% assign reduces_blocks = section.blocks | where: 'type', 'reduces' %}
      {%- for block in reduces_blocks -%}
