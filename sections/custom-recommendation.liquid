      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "recommended",
      "name": "Recommended",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "block_header",
          "label": "Block Title",
          "default": "Simply dummy text"
        },
        {
          "type": "color",
          "id": "block_bg",
          "label": "Block header BG",
          "default": "#FFFFFF"
        },
        {
          "type": "image_picker",
          "id": "product_image",
          "label": "Product image"
        },
        {
          "type": "text",
          "id": "product_category",
          "label": "Progress",
          "default": "Regimens"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Product title",
          "default": "Lorem Ipsum is simply dummy text"
        },
        {
          "type": "inline_richtext",
          "id": "product_description",
          "label": "Description",
          "default": "Sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua."
        },
        {
          "type": "text",
          "id": "product_price",
          "label": "Product price",
          "default": "Starting at Rs. 999"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "Button text"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button link"
        }
      ]
    },
    {
      "type": "reduces",
      "name": "Reduces",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "block_header",
          "label": "Block Title",
          "default": "Simply dummy text"
        },
        {
          "type": "color",
          "id": "block_bg",
          "label": "Block header BG",
          "default": "#FFFFFF"
        },
        {
          "type": "image_picker",
          "id": "product_image",
          "label": "Product image"
        },
        {
          "type": "text",
          "id": "product_category",
          "label": "Progress",
          "default": "Regimens"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Product title",
          "default": "Lorem Ipsum is simply dummy text"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "Button text"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom recommendation"
    }
  ]
}
