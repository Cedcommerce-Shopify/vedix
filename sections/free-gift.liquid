{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div
  id="free-gift-card"
  class="section-{{ section.id }}-padding"
  style="background-color:{{ section.settings.section_bg }};"
>
  <div class="contiainer m-auto max-w-[1088px] lg:px-[20px]">
    {% if section.settings.section_heading != blank %}
      <h2 class="mb-[50px] text-center font-AnekLatin-SemiBold text-[28px]/[32px] text-woodsmoke md:px-[20px] lg:text-[42px]/[58px]">
        {{ section.settings.section_heading }}
      </h2>
    {% endif %}
    <div class="card-parent">
      {%- assign bg_image = section.settings.bg_image -%}
      <div
        id="bg-image"
        class="bg-[length:100%_100%] bg-center bg-no-repeat py-[30px] md:bg-[length:66%_100%]"
        style="background-image: url('{{-bg_image | img_url:'master'-}}');"
      >
        <div class="m-auto max-w-[328px] shadow-[0px_0px_15px_#0000001A]">
          <h2 class="text-center font-AnekLatin-Bold text-[16px]/[22px] uppercase text-woodsmoke bg-padua p-4">
            {{ section.settings.heading }}
          </h2>

          <div class="bg-white p-[5px]">
            {%- assign image = section.settings.image -%}
            <div class="m-auto max-w-[375px]">
              {% if image != blank %}
                {{ image | image_url: width: image.width | image_tag: class: 'w-full h-full', loading: 'lazy' }}
              {% else %}
                {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg h-full w-full' }}
              {% endif %}
            </div>

            <div class="mt-[5px] border border-dashed border-blue-marguerite bg-perfume px-[14px] text-center">
              <a
                href=""
                class="font-AnekLatin-SemiBold text-[14px]/[22px] text-blue-violet md:font-AnekLatin-Bold"
              >
                {{- section.settings.price -}}
              </a>
            </div>
            <div class="pl-[25px] pt-[10px]">
              <h3 class="py-[5px] font-AnekLatin-SemiBold text-[16px]/[22px] text-woodsmoke">
                {{ section.settings.title }}
              </h3>
              <h4 class="font-AnekLatin-Medium text-[14px]/[22px] text-woodsmoke md:text-[16px]/[18px]">
                {{ section.settings.sub_title }}
              </h4>

              <div id="v_icon_check" class="pt-3 text-[14px]/[18px] text-woodsmoke md:pt-4 md:text-[16px]/[18px]">
                {{ section.settings.text }}
              </div>
              {% if section.settings.button_text != blank %}
                <div class="my-[16px] flex items-center gap-[5px]">
                  <a
                    href="{{ section.settings.button_link }}"
                    class="font-AnekLatin-SemiBold text-[12px]/[18px] text-sirocco md:text-[14px]/[18px]"
                  >
                    {{ section.settings.button_text }}
                  </a>
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none">
                    <path d="M6 9L12 15L18 9" stroke="#767E7E" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                  </svg>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="gift-card-bottom mt-[40px] text-center">
      {% if section.settings.main_button_text != blank %}
        <a
          href="{{ section.settings.main_button_link }}"
          class="btn mx-auto max-w-fit"
          ><span class="mb-[-2px] mt-[2px]">{{ section.settings.main_button_text }}</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="11.796"
            height="10.315"
            viewBox="0 0 11.796 10.315"
          >
            <g
              id="Group_8849"
              data-name="Group 8849"
              transform="translate(-215.754 -537.843)">
              <path
                id="Icon_ionic-ios-arrow-forward"
                data-name="Icon ionic-ios-arrow-forward"
                d="M15.366,11.352l-3.9-3.9a.734.734,0,0,1,0-1.041.743.743,0,0,1,1.044,0l4.422,4.419a.736.736,0,0,1,.021,1.016L12.51,16.3a.737.737,0,0,1-1.044-1.041Z"
                transform="translate(204.508 531.646)"
                fill="#fff"></path>
              <path
                id="Icon_ionic-ios-arrow-forward-2"
                data-name="Icon ionic-ios-arrow-forward"
                d="M15.366,11.352l-3.9-3.9a.734.734,0,0,1,0-1.041.743.743,0,0,1,1.044,0l4.422,4.419a.736.736,0,0,1,.021,1.016L12.51,16.3a.737.737,0,0,1-1.044-1.041Z"
                transform="translate(210.406 531.646)"
                fill="#fff"></path>
            </g>
          </svg>
        </a>
      {% endif %}
      {% if section.settings.section_text != blank %}
        <p class="mt-[20px] text-center font-AnekLatin-Medium text-[14px]/[22px] text-woodsmoke">
          {{ section.settings.section_text }}
        </p>
      {% endif %}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Free Gift",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Main Content"
    },
    {
      "type": "color",
      "id": "section_bg",
      "label": "Background color",
      "default": "#FFFBF8"
    },
    {
      "type": "text",
      "id": "section_heading",
      "label": "Heading",
      "default": "Lorem Ipsum is simply dummy text"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "BG Image"
    },
    {
      "type": "text",
      "id": "main_button_text",
      "label": "Button text",
      "default": "Button text"
    },
    {
      "type": "url",
      "id": "main_button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "section_text",
      "label": "Text",
      "default": "Get your limited edition booster oil today!"
    },
    {
      "type": "header",
      "content": "Gift Card Info"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "FREE GIFTS WORTH Rs.299/-"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "price",
      "label": "Price",
      "default": "Rs.299/- FREE"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Lorem Ipsum is simply dummy text"
    },
    {
      "type": "text",
      "id": "sub_title",
      "label": "Sub Title",
      "default": "consetetur sadipscing elitr, sed diam nonumy eirmod tempor"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Description text",
      "default": "<p>Lorem ipsum dolor sit amet.</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Button Text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Free Gift"
    }
  ]
}
{% endschema %}
