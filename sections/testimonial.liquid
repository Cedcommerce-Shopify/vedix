{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding" style="background-color: {{- section.settings.bg_color -}};">
  <div class="container mx-auto px-4 text-center">
    <h2 class="mb-6 max-w-[705px] text-left font-AnekLatin-SemiBold text-[28px]/[32px] text-white md:font-AnekLatin-Bold md:text-[42px]/[50px]">
      {{ section.settings.heading }}
    </h2>
    <div
      class="-mr-4 mb-12 grid auto-cols-[20rem] grid-flow-col gap-4 overflow-x-auto md:-mr-0 md:grid-cols-3"
      role="grid"
    >
      {%- for block in section.blocks -%}
        <div class="h-full bg-almond p-5" role="gridcell">
          <div class="flex justify-between pb-3">
            <p class="font-AnekLatin-SemiBold text-[16px]/[22px] text-woodsmoke">4.5</p>
            <p class="text-[12px]/[22px] text-woodsmoke">30 Jun 2022</p>
          </div>
          <div class="mb-4 block">
            <span class="block overflow-hidden rounded-[14px]">
              {% if block.settings.client_image != blank %}
                <img
                  src="{{ block.settings.client_image |  img_url: 'master' }}')"
                  loading="lazy"
                  width="{{ block.settings.client_image.width }}"
                  height="{{ block.settings.client_image.height }}"
                  alt="{{ block.settings.client_image.alt }}"
                >
              {%- else %}
                {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg w-full h-full' }}
              {% endif %}
            </span>
          </div>
          <div class="flex flex-col gap-1 text-left">
            <h2 class="font-AnekLatin-SemiBold text-[16px]/[22px] capitalize text-woodsmoke">
              {{ block.settings.title }}
            </h2>
            <p class="text-[14px]/[22px] text-woodsmoke">{{ block.settings.client_feedback }}</p>
          </div>
          <div class="mt-7 flex items-baseline justify-between text-left">
            <div class="flex flex-col">
              <h3 class="font-AnekLatin-SemiBold text-[16px]/[22px] capitalize text-woodsmoke">
                {{ block.settings.client_name }}
              </h3>
              <p class="text-[12px]/[22px] text-woodsmoke">{{ block.settings.client_address }}</p>
            </div>
            {% if block.settings.client_status != blank %}
              <div class="flex items-center gap-2.5">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="11.796"
                  height="10.315"
                  viewBox="0 0 11.796 10.315"
                >
                  <g
                    id="Group_8849"
                    data-name="Group 8849"
                    transform="translate(-215.754 -537.843)">
                    <path
                      id="Icon_ionic-ios-arrow-forward"
                      data-name="Icon ionic-ios-arrow-forward"
                      d="M15.366,11.352l-3.9-3.9a.734.734,0,0,1,0-1.041.743.743,0,0,1,1.044,0l4.422,4.419a.736.736,0,0,1,.021,1.016L12.51,16.3a.737.737,0,0,1-1.044-1.041Z"
                      transform="translate(204.508 531.646)"
                      fill="#000000" />
                    <path
                      id="Icon_ionic-ios-arrow-forward-2"
                      data-name="Icon ionic-ios-arrow-forward"
                      d="M15.366,11.352l-3.9-3.9a.734.734,0,0,1,0-1.041.743.743,0,0,1,1.044,0l4.422,4.419a.736.736,0,0,1,.021,1.016L12.51,16.3a.737.737,0,0,1-1.044-1.041Z"
                      transform="translate(210.406 531.646)"
                      fill="#000000" />
                  </g>
                </svg>
                <h3 class="font-AnekLatin-SemiBold text-[16px]/[22px] text-woodsmoke">
                  {{ block.settings.client_status }}
                </h3>
              </div>
            {% endif %}
          </div>
        </div>
      {%- endfor -%}
    </div>
    {% if section.settings.button_text != blank %}
      <a
        href="{{ section.settings.button_link }}"
        class="btn"
        role="button"
      >
        <span class="mb-[-2px] mt-[2px]">{{ section.settings.button_text }}</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="11.796"
          height="10.315"
          viewBox="0 0 11.796 10.315"
        >
          <g
            id="Group_8849"
            data-name="Group 8849"
            transform="translate(-215.754 -537.843)">
            <path
              id="Icon_ionic-ios-arrow-forward"
              data-name="Icon ionic-ios-arrow-forward"
              d="M15.366,11.352l-3.9-3.9a.734.734,0,0,1,0-1.041.743.743,0,0,1,1.044,0l4.422,4.419a.736.736,0,0,1,.021,1.016L12.51,16.3a.737.737,0,0,1-1.044-1.041Z"
              transform="translate(204.508 531.646)"
              fill="#ffffff"></path>
            <path
              id="Icon_ionic-ios-arrow-forward-2"
              data-name="Icon ionic-ios-arrow-forward"
              d="M15.366,11.352l-3.9-3.9a.734.734,0,0,1,0-1.041.743.743,0,0,1,1.044,0l4.422,4.419a.736.736,0,0,1,.021,1.016L12.51,16.3a.737.737,0,0,1-1.044-1.041Z"
              transform="translate(210.406 531.646)"
              fill="#ffffff"></path>
          </g>
        </svg>
      </a>
    {% endif %}
  </div>
</div>
{% schema %}
{
  "name": "Testimonial",
  "class": "section-testimonial",
  "tag": "section",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "BG Color",
      "default": "#9E6D44"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Lorem Ipsum is simply dummy text"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Button text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Block",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "client_image",
          "label": "Image"
        },
        {
          "type": "inline_richtext",
          "id": "title",
          "label": "Title",
          "default": "Excellent"
        },
        {
          "type": "richtext",
          "id": "client_feedback",
          "label": "Paragraph",
          "default": "<p>Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua.</p>"
        },
        {
          "type": "inline_richtext",
          "id": "client_name",
          "label": "Client Name",
          "default": "Client name"
        },
        {
          "type": "inline_richtext",
          "id": "client_address",
          "label": "Client Address",
          "default": "Clinet location"
        },
        {
          "type": "inline_richtext",
          "id": "client_status",
          "label": "Client Status",
          "default": "Verified"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonial"
    }
  ]
}
{% endschema %}
