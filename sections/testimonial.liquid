<div class="bg-cape-palliser py-6">
  <div class="container mx-auto px-4 text-center">
    <h2 class="mb-6 text-left font-AnekLatin-SemiBold text-[28px]/[32px] text-white">{{ section.settings.heading }}</h2>
    <div class="grid grid-cols-1 gap-3 sm:grid-cols-2 md:grid-cols-3" role="grid">
      {%- for block in section.blocks -%}
        <div class="h-full bg-almond p-5" role="gridcell">
          <div class="flex justify-between pb-3">
            <p class="font-AnekLatin-SemiBold text-[16px]/[22px] text-woodsmoke">4.5</p>
            <p class="text-[12px]/[22px] text-woodsmoke">30 Jun 2022</p>
          </div>
          <div class="mb-4 block">
            {% if block.settings.client_image != blank %}
              <span class="block overflow-hidden rounded-[14px]">
                <img
                  src="{{ block.settings.client_image |  img_url: 'master' }}')"
                  loading="lazy"
                  width="{{ block.settings.client_image.width }}"
                  height="{{ block.settings.client_image.height }}"
                  alt="{{ block.settings.client_image.alt }}"
                >
              </span>
            {% endif %}
          </div>
          <div class="flex flex-col gap-1 text-left">
            <h2 class="font-AnekLatin-SemiBold text-[16px]/[22px] text-woodsmoke">{{ block.settings.title }}</h2>
            <p class="text-[14px]/[22px] text-woodsmoke">{{ block.settings.client_feedback }}</p>
          </div>
          <div class="mt-7 flex items-baseline justify-between text-left">
            <div class="flex flex-col">
              <h3 class="font-AnekLatin-SemiBold text-[16px]/[22px] text-woodsmoke">
                {{ block.settings.client_name }}
              </h3>
              <p class="text-[12px]/[22px] text-woodsmoke">{{ block.settings.client_address }}</p>
            </div>
            {% if block.settings.client_status != blank %}
              <div class="flex items-center gap-2.5">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="11.796"
                  height="10.315"
                  viewBox="0 0 11.796 10.315"
                >
                  <g
                    id="Group_8849"
                    data-name="Group 8849"
                    transform="translate(-215.754 -537.843)">
                    <path
                      id="Icon_ionic-ios-arrow-forward"
                      data-name="Icon ionic-ios-arrow-forward"
                      d="M15.366,11.352l-3.9-3.9a.734.734,0,0,1,0-1.041.743.743,0,0,1,1.044,0l4.422,4.419a.736.736,0,0,1,.021,1.016L12.51,16.3a.737.737,0,0,1-1.044-1.041Z"
                      transform="translate(204.508 531.646)"
                      fill="#000000" />
                    <path
                      id="Icon_ionic-ios-arrow-forward-2"
                      data-name="Icon ionic-ios-arrow-forward"
                      d="M15.366,11.352l-3.9-3.9a.734.734,0,0,1,0-1.041.743.743,0,0,1,1.044,0l4.422,4.419a.736.736,0,0,1,.021,1.016L12.51,16.3a.737.737,0,0,1-1.044-1.041Z"
                      transform="translate(210.406 531.646)"
                      fill="#000000" />
                  </g>
                </svg>
                <h3 class="font-AnekLatin-SemiBold text-[16px]/[22px] text-woodsmoke">
                  {{ block.settings.client_status }}
                </h3>
              </div>
            {% endif %}
          </div>
        </div>
      {%- endfor -%}
    </div>
    {% if section.settings.button_text != blank %}
      <a
        href="{{ section.settings.button_link }}"
        class="my-6 inline-flex items-center justify-center gap-2 border border-solid border-woodsmoke bg-flame-pea px-7 py-3 font-AnekDevanagari-SemiBold text-[16px]/[16px] leading-normal tracking-normal text-white"
        role="button"
      >
        <span class="mb-[-2px] mt-[2px]">{{ section.settings.button_text }}</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="11.796"
          height="10.315"
          viewBox="0 0 11.796 10.315"
        >
          <g
            id="Group_8849"
            data-name="Group 8849"
            transform="translate(-215.754 -537.843)">
            <path
              id="Icon_ionic-ios-arrow-forward"
              data-name="Icon ionic-ios-arrow-forward"
              d="M15.366,11.352l-3.9-3.9a.734.734,0,0,1,0-1.041.743.743,0,0,1,1.044,0l4.422,4.419a.736.736,0,0,1,.021,1.016L12.51,16.3a.737.737,0,0,1-1.044-1.041Z"
              transform="translate(204.508 531.646)"
              fill="#ffffff"></path>
            <path
              id="Icon_ionic-ios-arrow-forward-2"
              data-name="Icon ionic-ios-arrow-forward"
              d="M15.366,11.352l-3.9-3.9a.734.734,0,0,1,0-1.041.743.743,0,0,1,1.044,0l4.422,4.419a.736.736,0,0,1,.021,1.016L12.51,16.3a.737.737,0,0,1-1.044-1.041Z"
              transform="translate(210.406 531.646)"
              fill="#ffffff"></path>
          </g>
        </svg>
      </a>
    {% endif %}
  </div>
</div>
{% schema %}
{
  "name": "Testimonial",
  "class": "section",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "info": "Add section heading here"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Block",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "client_image",
          "label": "Image"
        },
        {
          "type": "inline_richtext",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "client_feedback",
          "label": "Paragraph",
          "info": "Add info here"
        },
        {
          "type": "inline_richtext",
          "id": "client_name",
          "label": "Client Name"
        },
        {
          "type": "inline_richtext",
          "id": "client_address",
          "label": "Client Address"
        },
        {
          "type": "inline_richtext",
          "id": "client_status",
          "label": "Client Status"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonial"
    }
  ]
}
{% endschema %}
