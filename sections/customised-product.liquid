        },
        {
          "type": "image_picker",
          "id": "heading_icon",
          "label": "Heading Icon"
        },
        {
          "type": "richtext",
          "id": "benefit_desc",
          "label": "Benefits description"
        },
        {
          "type": "header",
          "content": "How to use"
        },
        {
          "type": "text",
          "id": "usage_text",
