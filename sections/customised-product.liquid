          "label": "Step description"
        },
        {
          "type": "header",
          "content": "Power Ingradients"
        },
        {
          "type": "text",
          "id": "ingradients_heading",
          "label": "Ingradients Heading"
        },
        {
          "type": "image_picker",
          "id": "ing_product_img_1",
          "label": "Product image"
