          "label": "Step 1"
        },
        {
          "type": "richtext",
          "id": "usage_step_desc_1",
          "label": "Step description"
        },
        {
          "type": "image_picker",
          "id": "usage_product_img_2",
          "label": "Product image"
        },
        {
          "type": "text",
          "id": "usage_step_2",
          "label": "Step 2"
        },
        {
          "type": "richtext",
          "id": "usage_step_desc_2",
          "label": "Step description"
        },
        {
          "type": "image_picker",
          "id": "usage_product_img_3",
          "label": "Product image"
        },
        {
          "type": "text",
          "id": "usage_step_3",
