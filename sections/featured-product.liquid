<div
  class="bg-quarter-spanish-white bg-cover bg-center bg-no-repeat px-6 py-8"
  {% if section.settings.section_image != blank %}
    style="background-image: url('{{ section.settings.section_image |  img_url: 'master' }}')"
  {% endif %}
>
  <div class="container mx-auto">
    {% if section.settings.heading != blank %}
      <h2 class="mb-6 text-left font-AnekLatin-SemiBold text-[28px]/[32px] text-woodsmoke">
        {{ section.settings.heading }}
      </h2>
    {% endif %}
    <div class="relative my-10 flex flex-col gap-4 max-w-sm mx-auto border border-solid border-woodsmoke bg-white text-center">
      {% if section.settings.product_offer != blank %}
        <div class="absolute left-0 right-0 -top-8 mx-auto w-11/12 max-w-sm border border-solid border-woodsmoke bg-white py-3 px-4 text-center text-[16px]/[22px] font-AnekLatin-Bold text-woodsmoke">
          {{ section.settings.product_offer }}
        </div>
      {% endif %}
      {% if section.settings.product_offer_desc != blank %}
        <div class="flex flex-col gap-4 px-4 pt-10">{{ section.settings.product_offer_desc }}</div>
      {% endif %}
      <div class="bg-blue-marguerite px-4 py-1 text-[14px]/[22px] text-white">Rs.299/-</div>
      <div class="flex gap-4 px-4">
        {% if section.settings.product_image != blank %}
          <span class="flex-initial w-[100px]">
            <img
              src="{{ section.settings.product_image | img_url: 'master' }}"
              loading="lazy"
              width="{{ block.settings.product_image.width }}"
              height="{{ block.settings.product_image.height }}"
              alt="{{ block.settings.product_image.alt }}"
            >
          </span>
        {% endif %}
        <div class="flex-initial w-auto flex flex-col gap-4 text-left">
          {% if section.settings.product_name != blank %}
            <h2 class="font-AnekLatin-SemiBold text-woodsmoke text-[16px]/[22px]">{{ section.settings.product_name }}</h2>
          {% endif %}
          {% if section.settings.product_info != blank %}
            <div class="font-AnekLatin-Medium text-woodsmoke text-[14px]/[18px] opacity-60">{{ section.settings.product_info }}</div>
          {% endif %}
          <div class="grid grid-cols-2 gap-2">
            {% if section.settings.link_text != blank %}
              <a
                href="{{ section.settings.link_url }}"
                class="inline-flex items-center gap-x-2 font-AnekLatin-SemiBold text-woodsmoke text-[12px]/[18px] opacity-60"
              >
                {{ section.settings.link_text }}
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="11.796"
                  height="10.315"
                  viewBox="0 0 11.796 10.315"
                >
                  <g
                    id="Group_8849"
                    data-name="Group 8849"
                    transform="translate(-215.754 -537.843)">
                    <path
                      id="Icon_ionic-ios-arrow-forward"
                      data-name="Icon ionic-ios-arrow-forward"
                      d="M15.366,11.352l-3.9-3.9a.734.734,0,0,1,0-1.041.743.743,0,0,1,1.044,0l4.422,4.419a.736.736,0,0,1,.021,1.016L12.51,16.3a.737.737,0,0,1-1.044-1.041Z"
                      transform="translate(204.508 531.646)"
                      fill="#fff" />
                    <path
                      id="Icon_ionic-ios-arrow-forward-2"
                      data-name="Icon ionic-ios-arrow-forward"
                      d="M15.366,11.352l-3.9-3.9a.734.734,0,0,1,0-1.041.743.743,0,0,1,1.044,0l4.422,4.419a.736.736,0,0,1,.021,1.016L12.51,16.3a.737.737,0,0,1-1.044-1.041Z"
                      transform="translate(210.406 531.646)"
                      fill="#fff" />
                  </g>
                </svg>
              </a>
            {% endif %}
            <div class="flex gap-2">
              <strong class="price">Rs.299</strong>
              <strong class="font-AnekLatin-Bold text-[14px]/[22px] text-fruit-salad">FREE</strong>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="flex flex-col gap-4 text-center">
      {% if section.settings.button_text != blank %}
        <a
          href="{{ section.settings.button_link }}"
          class="mt-6 inline-flex items-center justify-center gap-2 border border-solid border-woodsmoke bg-flame-pea px-7 py-3 font-AnekDevanagari-SemiBold text-[16px]/[16px] leading-normal tracking-normal text-white"
          ><span class="mb-[-2px] mt-[2px]">{{ section.settings.button_text }}</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="11.796"
            height="10.315"
            viewBox="0 0 11.796 10.315"
          >
            <g
              id="Group_8849"
              data-name="Group 8849"
              transform="translate(-215.754 -537.843)">
              <path
                id="Icon_ionic-ios-arrow-forward"
                data-name="Icon ionic-ios-arrow-forward"
                d="M15.366,11.352l-3.9-3.9a.734.734,0,0,1,0-1.041.743.743,0,0,1,1.044,0l4.422,4.419a.736.736,0,0,1,.021,1.016L12.51,16.3a.737.737,0,0,1-1.044-1.041Z"
                transform="translate(204.508 531.646)"
                fill="#fff"></path>
              <path
                id="Icon_ionic-ios-arrow-forward-2"
                data-name="Icon ionic-ios-arrow-forward"
                d="M15.366,11.352l-3.9-3.9a.734.734,0,0,1,0-1.041.743.743,0,0,1,1.044,0l4.422,4.419a.736.736,0,0,1,.021,1.016L12.51,16.3a.737.737,0,0,1-1.044-1.041Z"
                transform="translate(210.406 531.646)"
                fill="#fff"></path>
            </g>
          </svg>
        </a>
      {% endif %}
      {% if section.settings.bottom_text %}
        <div class="font-AnekLatin-Medium text-[14px]/[22px] text-woodsmoke">{{ section.settings.bottom_text }}</div>
      {% endif %}
    </div>
  </div>
</div>

