<div class="bg-white py-8">
  <div class="container px-4 mx-auto text-center">
    <h2 class="text-[28px]/[32px] text-woodsmoke text-left font-AnekLatin-SemiBold mb-6">{{ section.settings.title }}</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-5">
      {%- for block in section.blocks -%}
        <div class="border border-solid border-woodsmoke">
          <div class="bg-bridal-heath block">
            {%- assign image = block.settings.image -%}
            {% if image != blank %}
              {{ image | image_url: width: image.width | image_tag: class: 'bg-ecru-white h-40 h-full w-full object-cover object-center border-b-1 ', loading: 'lazy' }}
            {% endif %}
          </div>
          <div class="text-left bg-white border-t border-solid border-woodsmoke py-6 px-3">
            <h3 class="font-AnekLatin-SemiBold text-[16px]/[22px] text-woodsmoke mb-2">{{ block.settings.heading }}</h3>
            <h4 class="font-AnekLatin-Medium text-[14px]/[22px] text-woodsmoke mb-4">{{ block.settings.subheading }}</h4>
            <ul class="list-none flex flex-col gap-3">
              {% if block.settings.paragraph1 != blank %}
                <li class="flex items-start">
                  <span class="flex flex-none w-[24] h-[24]">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="15.776"
                      height="11.638"
                      viewBox="0 0 15.776 11.638">
                      <path
                        id="Path_10178"
                        data-name="Path 10178"
                        d="M1,8.5l4.375,4.375L14.125,3.5"
                        transform="translate(0.326 -2.175)"
                        fill="none"
                        stroke="#8bc292"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="1.875" />
                    </svg>
                  </span>
                  <span class="text-[14px]/[18px] text-woodsmoke">{{ block.settings.paragraph1 }}</span>
                </li>
              {% endif %}
              {% if block.settings.paragraph2 != blank %}
                <li class="flex items-start">
                  <span class="flex flex-none w-[24] h-[24]">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="15.776"
                      height="11.638"
                      viewBox="0 0 15.776 11.638">
                      <path
                        id="Path_10178"
                        data-name="Path 10178"
                        d="M1,8.5l4.375,4.375L14.125,3.5"
                        transform="translate(0.326 -2.175)"
                        fill="none"
                        stroke="#8bc292"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="1.875" />
                    </svg>
                  </span>
                  <span class="text-[14px]/[18px] text-woodsmoke">{{ block.settings.paragraph2 }}</span>
                </li>
              {% endif %}
              {% if block.settings.paragraph3 != blank %}
                <li class="flex items-start">
                  <span class="flex flex-none w-[24] h-[24]">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="15.776"
                      height="11.638"
                      viewBox="0 0 15.776 11.638">
                      <path
                        id="Path_10178"
                        data-name="Path 10178"
                        d="M1,8.5l4.375,4.375L14.125,3.5"
                        transform="translate(0.326 -2.175)"
                        fill="none"
                        stroke="#8bc292"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="1.875" />
                    </svg>
                  </span>
                  <span class="text-[14px]/[18px] text-woodsmoke">{{ block.settings.paragraph3 }}</span>
                </li>
              {% endif %}
            </ul>
          </div>
        </div>
      {%- endfor -%}
    </div>
    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="my-6 inline-flex items-center justify-center gap-2 border border-solid border-woodsmoke bg-flame-pea px-7 py-3 text-[16px]/[16px] font-AnekDevanagari-SemiBold leading-normal tracking-normal text-white">
        {{ section.settings.button_text }}
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="11.796"
          height="10.315"
          viewBox="0 0 11.796 10.315">
          <g
            id="Group_8849"
            data-name="Group 8849"
            transform="translate(-215.754 -537.843)">
            <path
              id="Icon_ionic-ios-arrow-forward"
              data-name="Icon ionic-ios-arrow-forward"
              d="M15.366,11.352l-3.9-3.9a.734.734,0,0,1,0-1.041.743.743,0,0,1,1.044,0l4.422,4.419a.736.736,0,0,1,.021,1.016L12.51,16.3a.737.737,0,0,1-1.044-1.041Z"
              transform="translate(204.508 531.646)"
              fill="#fff" />
            <path
              id="Icon_ionic-ios-arrow-forward-2"
              data-name="Icon ionic-ios-arrow-forward"
              d="M15.366,11.352l-3.9-3.9a.734.734,0,0,1,0-1.041.743.743,0,0,1,1.044,0l4.422,4.419a.736.736,0,0,1,.021,1.016L12.51,16.3a.737.737,0,0,1-1.044-1.041Z"
              transform="translate(210.406 531.646)"
              fill="#fff" />
          </g>
        </svg>
      </a>
    {% endif %}
  </div>
  {% schema %}
    {
      "name": "Image text grid vedix",
      "max_blocks": 4,
      "tag": "section",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Add section heading here"
        }, {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        }, {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ],
      "blocks": [
        {
          "type": "column",
          "name": "Block",
          "settings": [
            {
              "type": "image_picker",
              "id": "image",
              "label": "Product Image"
            },
            {
              "type": "text",
              "id": "heading",
              "label": "Product Title"
            },
            {
              "type": "text",
              "id": "subheading",
              "label": "Product Sub-heading"
            },
            {
              "type": "richtext",
              "id": "paragraph1",
              "label": "Paragraph"
            }, {
              "type": "richtext",
              "id": "paragraph2",
              "label": "Paragraph"
            }, {
              "type": "richtext",
              "id": "paragraph3",
              "label": "Paragraph"
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "Image text grid vedix"
        }
      ]
    }
  {% endschema %}