<div class="bg-white py-8">
  <div class="container mx-auto px-4 text-center">
    <h2 class="mb-6 text-left font-AnekLatin-SemiBold text-[28px]/[32px] text-woodsmoke">
      {{ section.settings.title }}
    </h2>
    <div class="grid grid-cols-1 gap-5 md:grid-cols-3" role="grid">
      {%- for block in section.blocks -%}
        <div class="border border-solid border-woodsmoke">
          <div class="block bg-bridal-heath">
            {%- assign image = block.settings.image -%}
            {% if image != blank %}
              {{
                image
                | image_url: width: image.width
                | image_tag:
                  class: 'bg-ecru-white h-40 h-full w-full object-cover object-center border-b-1 ',
                  loading: 'lazy'
              }}
            {% endif %}
          </div>
          <div class="border-t border-solid border-woodsmoke bg-white px-3 py-6 text-left">
            <h3 class="mb-2 font-AnekLatin-SemiBold text-[16px]/[22px] text-woodsmoke">{{ block.settings.heading }}</h3>
            <h4 class="mb-4 font-AnekLatin-Medium text-[14px]/[22px] text-woodsmoke">
              {{ block.settings.subheading }}
            </h4>
            <ul class="flex list-none flex-col gap-3" role="list">
              {% if block.settings.paragraph1 != blank %}
                <li class="flex items-baseline gap-2" role="listitem">
                  <span class="flex h-[24] w-[24] flex-none">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="15.776"
                      height="11.638"
                      viewBox="0 0 15.776 11.638"
                    >
                      <path
                        id="Path_10178"
                        data-name="Path 10178"
                        d="M1,8.5l4.375,4.375L14.125,3.5"
                        transform="translate(0.326 -2.175)"
                        fill="none"
                        stroke="#8bc292"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="1.875" />
                    </svg>
                  </span>
                  <span class="text-[14px]/[18px] text-woodsmoke">{{ block.settings.paragraph1 }}</span>
                </li>
              {% endif %}
              {% if block.settings.paragraph2 != blank %}
                <li class="flex items-baseline gap-2" role="listitem">
                  <span class="flex h-[24] w-[24] flex-none">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="15.776"
                      height="11.638"
                      viewBox="0 0 15.776 11.638"
                    >
                      <path
                        id="Path_10178"
                        data-name="Path 10178"
                        d="M1,8.5l4.375,4.375L14.125,3.5"
                        transform="translate(0.326 -2.175)"
                        fill="none"
                        stroke="#8bc292"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="1.875" />
                    </svg>
                  </span>
                  <span class="text-[14px]/[18px] text-woodsmoke">{{ block.settings.paragraph2 }}</span>
                </li>
              {% endif %}
              {% if block.settings.paragraph3 != blank %}
                <li class="flex items-baseline gap-2" role="listitem">
                  <span class="flex h-[24] w-[24] flex-none">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="15.776"
                      height="11.638"
                      viewBox="0 0 15.776 11.638"
                    >
                      <path
                        id="Path_10178"
                        data-name="Path 10178"
                        d="M1,8.5l4.375,4.375L14.125,3.5"
                        transform="translate(0.326 -2.175)"
                        fill="none"
                        stroke="#8bc292"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="1.875" />
                    </svg>
                  </span>
                  <span class="text-[14px]/[18px] text-woodsmoke">{{ block.settings.paragraph3 }}</span>
                </li>
              {% endif %}
            </ul>
          </div>
        </div>
      {%- endfor -%}
    </div>
    {% if section.settings.button_text != blank %}
      <a
        href="{{ section.settings.button_link }}"
        class="my-6 inline-flex items-center justify-center gap-2 border border-solid border-woodsmoke bg-flame-pea px-7 py-3 font-AnekDevanagari-SemiBold text-[16px]/[16px] leading-normal tracking-normal text-white"
        role="button"
      >
        <span class="mb-[-2px] mt-[2px]">{{ section.settings.button_text }}</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="11.796"
          height="10.315"
          viewBox="0 0 11.796 10.315"
        >
          <g
            id="Group_8849"
            data-name="Group 8849"
            transform="translate(-215.754 -537.843)">
            <path
              id="Icon_ionic-ios-arrow-forward"
              data-name="Icon ionic-ios-arrow-forward"
              d="M15.366,11.352l-3.9-3.9a.734.734,0,0,1,0-1.041.743.743,0,0,1,1.044,0l4.422,4.419a.736.736,0,0,1,.021,1.016L12.51,16.3a.737.737,0,0,1-1.044-1.041Z"
              transform="translate(204.508 531.646)"
              fill="#fff" />
            <path
              id="Icon_ionic-ios-arrow-forward-2"
              data-name="Icon ionic-ios-arrow-forward"
              d="M15.366,11.352l-3.9-3.9a.734.734,0,0,1,0-1.041.743.743,0,0,1,1.044,0l4.422,4.419a.736.736,0,0,1,.021,1.016L12.51,16.3a.737.737,0,0,1-1.044-1.041Z"
              transform="translate(210.406 531.646)"
              fill="#fff" />
          </g>
        </svg>
      </a>
    {% endif %}
  </div>
</div>
{% schema %}
{
  "name": "Image text grid",
  "max_blocks": 4,
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Product Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Product Title"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Product Sub-heading"
        },
        {
          "type": "richtext",
          "id": "paragraph1",
          "label": "Paragraph"
        },
        {
          "type": "richtext",
          "id": "paragraph2",
          "label": "Paragraph"
        },
        {
          "type": "richtext",
          "id": "paragraph3",
          "label": "Paragraph"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image text grid"
    }
  ]
}
{% endschema %}
