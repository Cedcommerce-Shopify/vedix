{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="section-{{ section.id }}-padding " style="background-color:{{ section.settings.bg_color }};">
  <div class="container mx-auto px-4">
    <h2 class="text-center font-AnekLatin-Bold text-[16px]/[22px] text-woodsmoke">{{ section.settings.heading }}</h2>
    <p class="mx-auto mt-[15px] max-w-[227px] text-left text-[14px]/[22px] text-woodsmoke">
      {{ section.settings.text }}
    </p>
    <div class="mt-5">
      <ul class="flex items-center justify-center gap-x-8" role="contact-list">
        {%- for block in section.blocks -%}
          <li class="flex items-center gap-x-2">
            <div class="mx-auto max-w-[20px]">
              {%- assign icon = block.settings.icon -%}
              {% if icon != blank %}
                {{ icon | image_url: width: icon.width | image_tag: class: 'w-full', loading: 'lazy' }}
              {% else %}
                {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </div>
            <p class="font-AnekLatin-SemiBold text-[14px]/[18px] text-woodsmoke">
              <a href="javascript:void(0)" aria-label="{{ block.settings.title }}">{{ block.settings.title }}</a>
            </p>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Help and support",
    "class": "section-help-and-support",
    "tag": "section",
    "settings": [
      {
        "type": "color",
        "id": "bg_color",
        "label": "BG Color",
        "default": "#FFFBF8"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Need Help?"
      },
      {
        "type": "text",
        "id": "text",
        "label": "Text",
        "default": "Reach out to us on the below between 9 am to 6 pm, Monday to Saturday"
      },
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 40
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 52
      }
    ],
    "blocks": [
      {
        "name": "Contact Info",
        "type": "contact_info",
        "limit": 2,
        "settings": [
          {
            "type": "image_picker",
            "id": "icon",
            "label": "Icon"
          }, {
            "type": "text",
            "id": "title",
            "label": "Text",
            "placeholder": "Support@Vedix.Com"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Help and support",
        "blocks": [
          {
            "type": "contact_info"
          }, {
            "type": "contact_info"
          }
        ]
      }
    ]
  }
{% endschema %}